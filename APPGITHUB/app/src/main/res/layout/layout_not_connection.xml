<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="150dp">

    <ImageView
        android:id="@+id/ivNotConnection"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_not_interested_24"
        tools:ignore="MissingConstraints,VectorDrawableCompat" />

    <TextView
        android:id="@+id/tvNotConnection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_not_connect"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/brownWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivNotConnection" />

    <Button
        android:id="@+id/btnAgainConnection"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="@string/btn_update"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNotConnection"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
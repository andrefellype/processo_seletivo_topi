<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivNotConnection"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_signal_cellular"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/tvNotConnection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/msg_not_connection"
        android:textSize="23dp"
        android:textStyle="bold"
        android:textColor="@color/colorMainVariant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivNotConnection" />

    <Button
        android:id="@+id/btnAgainConnection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_again_connection"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorMainVariant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNotConnection"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
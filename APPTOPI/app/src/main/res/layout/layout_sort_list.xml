<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitleSort"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="@string/title_sort"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/viewDividerOne"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/gray_default_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitleSort"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/ivSortName"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_format_list_num"
        android:layout_marginLeft="5dp"
        app:backgroundTint="@color/colorTxtGold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewDividerOne"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvTitleSortName"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:text="@string/title_sort_name"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/viewDividerOne"
        app:layout_constraintStart_toEndOf="@id/ivSortName"
        app:layout_constraintEnd_toStartOf="@id/ivSortNameSelect"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/ivSortNameSelect"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintTop_toBottomOf="@id/viewDividerOne"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/ivSortStar"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_format_list_num"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        app:backgroundTint="@color/colorTxtGold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivSortName"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:text="@string/title_sort_star"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tvTitleSortName"
        app:layout_constraintStart_toEndOf="@id/ivSortStar"
        app:layout_constraintEnd_toStartOf="@id/ivSortStarSelect"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/ivSortStarSelect"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintTop_toBottomOf="@id/ivSortNameSelect"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>